{
  "name": "ts-express-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for express and typescript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint src/**/*.ts --fix --quiet",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "build:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ejs,ts --exec npm run build:start",
    "start": "ts-node .",
    "test": "jest --detectOpenHandles"
  },
  "author": "Bruno Salzano",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/d4rkstar/ts-express-boilerplate.git"
  },
  "dependencies": {
    "async": "^2.6.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7",
    "ts-node": "8.3.0",
    "typeorm": "^0.2.18",
    "underscore": "^1.9.1",
    "wait-for-expect": "^1.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/dateformat": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "^12.6.2",
    "@types/supertest": "^2.0.8",
    "@types/underscore": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "acorn": "^6.2.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "ncu": "^0.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typeorm-model-generator": "^0.3.4",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0"
