{
  "name": "ts-express-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for express and typescript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint src/**/*.ts --fix --quiet",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "build:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ejs,ts --exec npm run build:start",
    "start": "ts-node .",
    "test": "jest --detectOpenHandles"
  },
  "author": "Bruno Salzano",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/d4rkstar/ts-express-boilerplate.git"
  },
  "dependencies": {
    "async": "^2.6.2",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-winston": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.2",
    "ts-node": "8.1.0",
    "typeorm": "^0.2.17",
    "underscore": "^1.9.1",
    "wait-for-expect": "^1.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^2.4.2",
    "@types/dateformat": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "24.0.12",
    "@types/node": "^12.0.0",
    "@types/supertest": "^2.0.7",
    "@types/underscore": "^1.8.14",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "acorn": "^6.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "ncu": "^0.2.1",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typeorm-model-generator": "^0.3.4",
    "typescript": "^3.4.5",
    "typescript-eslint-parser": "^22.0.0"
